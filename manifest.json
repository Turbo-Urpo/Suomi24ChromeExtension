{
    "manifest_version": 2,
    "name": "Suomi24 Extension",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": ["https://keskustelu.suomi24.fi/*"],
            "css": ["suomi24Ext.css"],
            "js": [ "makeCollapse.js", "suomi24Ext.js" ]
        }
    ],
    /*
    "background": {
        "scripts": ["background.js"]
    }
    ,
    */
    "browser_action": {
        "default_icon": "suomi24Ext.png",
        "default_popup": "popup.html",
        "default_title": "Suomi24"
    },
    
    "permissions": [
        "storage",
        "tabs",
        "<all_urls>"
    ],
    
    "web_accessible_resources": ["collapse.png", "expand.png"]
    
}






































